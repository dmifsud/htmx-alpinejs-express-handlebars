<div x-data="{ itemValue: '' }" class="container mx-auto my-10">
  <h1 class="text-center text-3xl font-semibold mb-4">Todo List</h1>
  <div class="text-center">
    <small>HTMx, AlpineJs, Web Components (Lit), TailwindCSS, Express Handlebars</small>
  </div>
  {{!-- didn't use hx-on--after-request="this.reset()" because it doesn't update itemValue --}}
  {{!-- Adding: <span x-text="itemValue"></span> --}}
  {{!-- https://www.geeksforgeeks.org/create-a-to-do-list-using-tailwind-css/ --}}
  <div class="md:w-1/2 mx-auto">
      <div class="bg-white shadow-md rounded-lg p-6">
          <form hx-post="/add" hx-target="#todo-list" hx-swap="beforeend">
            <div class="flex mb-4">
              <input type="text" autocomplete="off" name="task" x-model="itemValue" placeholder="New Todo" class="w-full px-4 py-2 mr-2 rounded-lg
                                    border-gray-300 focus:outline-none
                                      focus:border-blue-500" id="todo-input">
              <button type="submit" class="bg-blue-500 hover:bg-blue-700 
                                    text-white font-bold py-2 px-4 rounded">Add</button>
            </div>
          </form>
          <ul id="todo-list">
            {{#each todos}}
              {{> todo}}
            {{/each}}
          </ul>
      </div>
  </div>
   
</div>